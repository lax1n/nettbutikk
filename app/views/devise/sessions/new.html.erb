<div class="large-3 large-centered columns">
  <div class="login-box">
    <div class="row">
      <div class="large-12 columns">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="large-12 columns">
                <%= f.email_field :email, placeholder: 'E-post', autofocus: true %>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <%= f.password_field :password, placeholder: 'Passord', autocomplete: "off" %>
              </div>
            </div>
            <div class="row">
              <div class="large-12 columns">
                <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, 'Husk meg?' %>
                    </div>
                <% end -%>
              </div>
            </div>
            <div class="row">
              <div class="large-12 large-centered columns">
                <%= f.submit 'Logg inn', class: 'button expand' %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>